{
  "compilerOptions": {
    "target": "ES2017",
    "module": "es2020",
    "outDir": "./dist",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "strict": true,
    "declaration": true,
    "pretty": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "exclude": ["tests"]
}
